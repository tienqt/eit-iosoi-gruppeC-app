<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.gruppec.iosoi.eit.smartlock.LoadActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lockedLoad"
        android:src="@drawable/locked"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarLoad"
        android:indeterminate="false"
        android:layout_below="@+id/lockedLoad"
        android:layout_centerHorizontal="true"
        android:indeterminateTintMode="src_in"
        android:indeterminateTint="#149b03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading..."
        android:id="@+id/progressBarText"
        android:layout_below="@+id/progressBarLoad"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unlockedLoad"
        android:visibility="invisible"
        android:src="@drawable/unlocked"
        android:layout_above="@+id/progressBarLoad"
        android:layout_alignLeft="@+id/lockedLoad"
        android:layout_alignStart="@+id/lockedLoad" />

</RelativeLayout>
